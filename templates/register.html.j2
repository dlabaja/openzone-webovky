{% extends "index.html.j2" %}
{% block container %}
<form method="POST">
    {{ form.hidden_tag() }}
    Jméno: {{ form.name }}<br>
    Email: {{ form.email }}<br>
    Heslo: {{ form.password }}<br>
    Znovu heslo: {{ form.passwordAgain }}<br>
    <input type="submit" value="Zaregistrovat se"><br><br>
    Již máte účet? Přihlaste se <a class="text" 
    href="/login">zde</a>
{% endblock container %}